package jugueteria;
import java.util.Date;

public class Empleado {
	    private int idEmpleado;
	    private String nombre;
	    private String cargo; // ENUM: 'jefe', 'cajero'
	    private Date fechaIngreso;
	    
	    // Constructor vacío
	    public Empleado() {}

	    // Constructor completo (sin ID para inserción)
	    public Empleado(String nombre, String cargo, Date fechaIngreso) {
	        this.nombre = nombre;
	        this.cargo = cargo;
	        this.fechaIngreso = fechaIngreso;
	    }

	    // Constructor completo
	    public Empleado(int idEmpleado, String nombre, String cargo, Date fechaIngreso) {
	        this.idEmpleado = idEmpleado;
	        this.nombre = nombre;
	        this.cargo = cargo;
	        this.fechaIngreso = fechaIngreso;
	    }
	    
	    // Getters y Setters...
	    public int getIdEmpleado() { 
	    	return idEmpleado; 
	    	}
	    public void setIdEmpleado(int idEmpleado) { 
	    	this.idEmpleado = idEmpleado; 
	    	}
	    public String getNombre() { 
	    	return nombre; 
	    	}
	    public void setNombre(String nombre) { 
	    	this.nombre = nombre; 
	    	}
	    public String getCargo() { 
	    	return cargo; 
	    	}
	    public void setCargo(String cargo) { 
	    	this.cargo = cargo; 
	    	}
	    public Date getFechaIngreso() { 
	    	return fechaIngreso; 
	    	}
	    public void setFechaIngreso(Date fechaIngreso) { 
	    	this.fechaIngreso = fechaIngreso; 
	    	}
	}
